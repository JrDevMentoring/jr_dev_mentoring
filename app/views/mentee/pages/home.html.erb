<div class="jumbotron text-center">
  <h1>Welcome to Jr. Dev Mentoring</h1>
  <h3>Mentee</h3>
</div>
<div class="row">
    <% if current_user.profile %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
          <%= link_to "Edit your profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>
      <div class="col-md-6">
          <%= render partial: "mentee/pages/mentee" %>
      </div>
    <% else %>
      <div class='container'>
        <div class='row'>
          <div class='col-md-8 col-md-offset-2'>
            <div class='well'>
            <p class='text-center'>Create your profile so that you can be matched with someone in the Jr. Dev Mentoring community.</p>
            <%= link_to "Create your profile", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
 
</div>
